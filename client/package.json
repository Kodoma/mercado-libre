{
  "name": "client",
  "version": "0.1.0",
  "private": true,
  "modules": "auto",
  "scripts": {
    "dev": "next dev",
    "build": "rm -rf .next npm run test && next build",
    "start": "npm run build && next start",
    "test": "rm -rf build && jest --forceExit --detectOpenHandles"
  },
  "dependencies": {
    "@jest/types": "^27.0.2",
    "@material-ui/core": "^4.11.4",
    "@material-ui/lab": "^4.0.0-alpha.58",
    "babel-plugin-styled-components": "^1.12.0",
    "babel-plugin-syntax-jsx": "^6.18.0",
    "bootstrap": "^5.0.1",
    "cross-fetch": "^3.1.4",
    "jest-css-modules-transform": "^4.2.1",
    "next": "10.2.3",
    "query-string": "^7.0.0",
    "react": "17.0.2",
    "react-device-detect": "^1.17.0",
    "react-dom": "17.0.2",
    "react-hook-form": "^7.7.1",
    "react-image-gallery": "^1.1.1",
    "react-number-format": "^4.6.3",
    "react-slick": "^0.28.1",
    "react-test-renderer": "^17.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.14.3",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/plugin-proposal-decorators": "^7.14.2",
    "@babel/plugin-proposal-object-rest-spread": "^7.14.4",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-syntax-jsx": "^7.12.13",
    "@babel/plugin-transform-modules-commonjs": "^7.14.0",
    "@babel/plugin-transform-object-assign": "^7.12.13",
    "@babel/plugin-transform-runtime": "^7.14.3",
    "@babel/preset-env": "^7.14.4",
    "@babel/preset-react": "^7.13.13",
    "@testing-library/dom": "^7.31.2",
    "@testing-library/jest-dom": "^5.13.0",
    "@testing-library/react": "^11.2.7",
    "@testing-library/user-event": "^13.1.9",
    "@types/enzyme": "^3.10.8",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.12.1",
    "@types/react": "^17.0.8",
    "@types/react-image-gallery": "^1.0.3",
    "@types/react-test-renderer": "^17.0.1",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.6.1",
    "babel-jest": "^27.0.2",
    "enzyme": "^3.11.0",
    "eslint": "^7.28.0",
    "eslint-plugin-formatjs": "^2.15.7",
    "identity-obj-proxy": "^3.0.0",
    "ignore-styles": "^5.0.1",
    "jest": "^27.0.4",
    "react-intl": "^5.20.1",
    "ts-jest": "^27.0.3",
    "typescript": "^4.3.2"
  },
  "jest": {
    "verbose": true,
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "<rootDir>/src/__tests__/*.(test|spec).(js|jsx|ts|tsx)"
    ],
    "globals": {
      "ts-jest": {
        "babelConfig": true,
        "tsConfig": "jest.tsconfig.json"
      }
    },
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "text-summary"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/mocks.js",
      "\\.(css|less)$": "<rootDir>/__mocks__/mocks.js"
    }
  }
}
